<% layout("/layouts/boilerplate.ejs") %>


    <div class="row">

        <div class="col-lg-8 offset-lg-3">

            <div class="card listingcard" style="width: 40rem;">
                <h2 class="card-title mt-3 mb-2 p-2">
                    <%=listingData.title%>
                </h2>

                <img src="<%=listingData.image.url%>" class="card-img-top show-img" alt="...">
                <div class="card-body">

                    <p class="card-text"><b>Description</b>: <%=listingData.description%>
                    </p>
                    <p class="card-text"> <b>Price:</b>&#8377; <%=listingData.price.toLocaleString("en-IN") %> /night
                    </p>
                    </p>
                    <p class="card-text"><b>Country :</b>: <%=listingData.country%>
                    </p>
                    <p class="card-text"><b>Location:</b>: <%=listingData.location%>
                    </p>


                    <div class="row">

                        <div class="col-4 d-flex">
                            <a href="/listings/<%=listingData.id%>/edit" class="btn btn-danger me-3">Edit</a>
                            <form method="post" , action="/listings/<%=listingData._id%>?_method=DELETE">

                                <button class="btn btn-outline-danger">Delete</button>
                            </form>

                        </div>

                    </div>

                    <hr>

                    <div>
                        <h3 class="">Leave A Review</h3>

                        <form class="mt-5 mb-3 needs-validation" action="/listings/<%= listingData._id %>/review"
                            method="post" novalidate>

                            <div class="mt-2 mb-3">
                                <label for="rating" class="form-label">Rating</label>
                                <input class="form-range" type="range" min="1" max="5" name="review[rating]"
                                    id="rating">
                            </div>

                            <div class="mt-2 mb-3">
                                <label for="Comment" class="form-label">Comment</label>
                                <textarea name="review[Comment]" class="form-control border-3" id="Comment" cols="50"
                                    rows="5" required></textarea>
                                <div class="invalid-feedback">Please add a Comment.</div>
                                <div class="valid-feedback">Looks good!</div>

                            </div>
                            <button class="btn btn-outline-danger">Submit</button>

                        </form>
                    </div>
                    <hr>
                    <div>
                        <h4>All Reveiws:</h4>
                        <div class="row">
                            <% for(review of listingData.reviews){ %>

                                <div class="col-6">
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">David</h5>
                                            <h6 class="card-subtitle mb-2 text-body-secondary">
                                                <%= review.rating %><i class="fa-solid fa-star-half-stroke"></i>
                                            </h6>
                                            <p class="card-text">
                                                <%= review.Comment %>
                                            </p>
                                            <form action="/listings/<%=listingData.id%>/review/<%=review.id%>?_method=DELETE" method="post">
                                                <button class="btn btn-dark btn-sm"> Delete</button>

                                            </form>

                                        </div>
                                    </div>
                                </div>

                                <%}%>


                        </div>


                    </div>


                </div>
            </div>

        </div>

    </div>









    </body>